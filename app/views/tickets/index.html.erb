<h1>Ticket Details</h1>
<table>
<style>
      table,
      th,
      td {
        padding: 10px;
        border: 1px solid black;
        border-collapse: collapse;
      }
</style>
  <tr>
    <th>ID</th>
    <th>Request Number</th>
    <th>Sequence Number</th>
    <th>Request Type</th>
    <th>Request Action</th>
    <th>Response Due Date Time</th>
    <th>Primary Service Area Code</th>
    <th>Additional Service Area Codes</th>
    <th>Action</th>
  </tr>
  <% @ticket_data.each do |t| %>
    <tr>
    <td><%= t.id %></td>
    <td><%= t.request_number %></td>
    <td><%= t.sequence_number %></td>
    <td><%= t.request_type %></td>
    <td><%= t.request_action %></td>
    <td><%= t.request_due_date_time %></td>
    <td><%= t.primary_service_area_code %></td>
    <td><%= t.additional_service_area_codes %></td>
    <td><%= link_to "Show", ticket_path(t) %></td>
  </tr>
  <% end %>
</table>
